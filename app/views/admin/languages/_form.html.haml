= semantic_form_for [:admin, @language] do |f|
  = f.inputs  do
    = f.input :id
    = f.input :name
    = f.input :price
    = f.input :syntax_mode
    = f.input :hidden
    = f.input :version
    = f.input :description, :as => :text
    = f.input :code_example, :as => :text
    %li
      %label.label Links
      %div.links
        - unless @language.links.blank?
          - @language.links.each do |link|
            = text_field_tag "language[links][]", link
            %button.delete_link Delete
        %button#add_link Add

  = f.buttons :commit

